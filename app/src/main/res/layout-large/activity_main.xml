<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="@drawable/background5">
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <Space
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <AutoCompleteTextView
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:inputType="none|text|textUri"
            android:ems="10"
            android:textSize="24sp"
            android:id="@+id/input"
            android:textStyle="bold"
            android:textColor="#2B60DE"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/search"
            android:background="#00ffffff"
            android:adjustViewBounds="true"
            android:onClick="ok"
            android:scaleType="fitCenter"
            android:id="@+id/okay" />
        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/lang"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/language"
            android:background="#00ffffff"
            android:layout_gravity="center"
            android:onClick="lan_b"
            android:textSize="16sp"
            android:gravity="center"/>


    </LinearLayout>



    <TextView
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:id="@+id/output"
        android:textStyle="bold"
        android:textColor="#FF2400"
        android:layout_width="400dp"
        android:visibility="visible" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <Space
            android:layout_width="80dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/recent6"
            android:background="#00ffffff"
            android:adjustViewBounds="true"

            android:paddingTop="10dp"
            android:onClick="rec_b"
            android:scaleType="fitCenter"
            android:id="@+id/rec_but" />
        <Space
            android:layout_width="65dp"
            android:layout_height="match_parent" />

        <ImageButton android:id="@+id/fav_but"
            android:layout_width="100dp"
            android:src="@drawable/star"
            android:background="#00ffffff"
            android:onClick="fav_b"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            />
        <Space
            android:layout_width="65dp"
            android:layout_height="match_parent" />

        <ImageButton android:id="@+id/help_but"
            android:layout_width="100dp"
            android:src="@drawable/help"
            android:background="#00ffffff"
            android:onClick="help_b"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


</LinearLayout>
